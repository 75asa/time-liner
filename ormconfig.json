{
  "type": "mongodb",
  "host": "localhost",
  "port": 27017,
  "database": "sample",
  "useUnifiedTopology": true,
  "synchronize": true,
  "logging": false,
  "entities": [
    "dist/entity/*.ts"
  ],
  "migrations": [
    "dist/migration/**/*.ts"
  ],
  "subscribers": [
    "dist/subscriber/**/*.ts"
  ],
  "cli": {
    "entitiesDir": "dist/entity",
    "migrationsDir": "dist/migration",
    "subscribersDir": "dist/subscriber"
  }
}