{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "strict": false,
    "allowJs": true,
    "sourceMap": true,
    "rootDir": "src",
    "outDir": "lib",
    "lib": ["ES2019"],
    "baseUrl": ".",
    "paths": {
      "*": ["node_modules/*", "src/types/*"]
    },
    "experimentalDecorators": true
  },
  "compileOnSave": true,
  "include": ["src/**/*"]
}
